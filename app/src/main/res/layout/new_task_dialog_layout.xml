<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    app:cardCornerRadius="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    
        <com.behealthy.gincos.utils.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_new_task"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:id="@+id/myTextView3"
            app:layout_constraintHorizontal_bias="0.507"
            android:layout_marginTop="16dp" />

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            tools:src="@drawable/water_fighter_icon"
            android:id="@+id/dialog_task_image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/dialog_task_name"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="32dp"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:layout_marginRight="24dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintTop_toBottomOf="@+id/myTextView3"
            android:layout_marginBottom="64dp" />

        <com.behealthy.gincos.utils.MyTextView
            android:layout_width="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            tools:text="Water Fighter"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/dialog_task_image"
            android:id="@+id/dialog_task_name"
            app:layout_constraintTop_toTopOf="@+id/dialog_task_image"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/dialog_task_image"
            android:layout_marginBottom="8dp" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="20dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_marginEnd="20dp"
            android:id="@+id/dialog_dismiss"
            app:layout_constraintRight_toRightOf="parent">

            <com.behealthy.gincos.utils.MyTextView
                android:textSize="16sp"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/greenPrimary"
                android:text="@string/dialog_dismiss" />

        </FrameLayout>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>